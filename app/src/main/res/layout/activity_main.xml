<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/lightcream">

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/fredoka_bold"
        android:text="Welcome to"
        android:textColor="@color/coralpink"
        android:textSize="40sp" />

    <ImageView
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_below="@id/text1"
        android:src="@drawable/looplylogo2"
        android:layout_centerHorizontal="true"
        android:id="@+id/image1"/>

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_below="@id/image1"
        android:layout_marginTop="70dp"
        android:fontFamily="@font/fredoka_bold"
        android:text="Let Looply guide you \n crochet journey."
        android:textColor="@color/coralpink"
        android:textSize="24sp" />


    <TextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:layout_below="@id/text2"
        android:fontFamily="@font/fredoka"
        android:text="Track your progress, learn the basics, discover \n unique patterns, and connect with fellow crafters."
        android:textColor="@color/coralpink"
        android:textSize="14sp" />

    <Button
        android:id="@+id/button1"
        android:layout_width="253dp"
        android:layout_height="55dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/text3"
        android:layout_marginTop="100dp"
        android:backgroundTint="@color/coralpink"
        android:text="Get Started"
        android:fontFamily="@font/fredoka_bold"
        android:textColor="@color/lightcream"
        />

    <LinearLayout
        android:id="@+id/ly1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/button1"
        android:orientation="horizontal"
        android:layout_marginTop="1dp"
        android:gravity="center">

        <TextView
            android:id="@+id/text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign In"
            android:textColor="@color/deepnavy"
            android:textSize="14sp"
            android:fontFamily="@font/fredoka_bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Or"
            android:textColor="@color/deepnavy"
            android:textSize="14sp"
            android:fontFamily="@font/fredoka"/>

        <TextView
            android:id="@+id/text5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Log In"
            android:textColor="@color/deepnavy"
            android:textSize="14sp"
            android:fontFamily="@font/fredoka_bold"/>
    </LinearLayout>
</RelativeLayout>