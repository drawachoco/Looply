<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightcream"
    tools:context=".MessageFragment"
    android:id="@+id/fragment_message"
    android:padding="16dp">

    <androidx.fragment.app.FragmentContainerView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/fragmentcontainer"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonFragment1" />

    <Button
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:id="@+id/buttonFragment1"
        android:text="Contact"
        android:textSize="20sp"
        android:fontFamily="@font/fredoka_semibold"
        android:backgroundTint="@color/coralpink"
        android:textColor="@color/lightcream"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonFragment2" />

    <Button
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:id="@+id/buttonFragment2"
        android:textSize="20sp"
        android:fontFamily="@font/fredoka_semibold"
        android:backgroundTint="@color/coralpink"
        android:textColor="@color/lightcream"
        android:text="Chat"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonFragment1" />

</androidx.constraintlayout.widget.ConstraintLayout>
